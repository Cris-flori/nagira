#!/bin/bash
#
# nagira:       Starts Nagira application monitoring for Nagios
#
# Version:      1
#
# chkconfig: -  20 99
# description: Start-up file for Nagira monitoring component, Nagios RESTful API. See also: http://dmytro.github.com/nagira
# processname: ruby ./nagira.rb
# config: TBD

init_rvm () {
    source /usr/local/rvm/scripts/rvm > /dev/null 2>&1 
    rvm use <%= APP[:rvm] %> --default > /dev/null 2>&1 
}

process_name="Sinatra Nagira services"

pid_file=/var/run/nagira.pid


get_pid () {
     echo $(ps axo command,pid | awk '$1 ~ /ruby/ && $2 ~ /nagira/ {print $3}')
}


start() {
    [ ! -z "$(get_pid)" ] && { status; return 1; }
    echo -n $"Starting ${process_name}:"
    # TODO - background using sinatra option?
    su - <%=  APP[:run_as] %> -s /bin/bash -c "cd <%= $nagira_root %> && RACK_ENV=production bundle exec ./nagira.rb" > <%= APP[:log] %> 2>&1 &
    sleep 5
    process=$(get_pid)
    if [ -z "$process" ]; then
        echo "   [FAIL]"
    else
        echo "    OK"
    fi
}

stop() {
    [ -z "$(get_pid)" ] && { status; return 1; }
    echo -n $"Shutting down ${process_name}:    "
    # TODO: need testing
    local process=$(get_pid)
    kill $process
    RETVAL=$?
    sleep 2
    [ -z "$(get_pid)" ] && { echo OK; return $RETVAL; }
    echo FAIL
}

status () {
    process=$(get_pid)
    if [ -z "$process" ]; then
        echo "Process $process_name is not running"
    else
        echo "Process $process_name is running with PID: $process"
    fi
}

restart() {
    stop
    start
}

RETVAL=0

# See how we were called.
case "$1" in
  start)
        init_rvm
        start
        ;;
  stop)
        init_rvm
        stop
        ;;
  status)
        status
        ;;
  restart|reload)
        init_rvm
        restart
        ;;
  *)
        echo $"Usage: $0 {start|stop|status|restart}"
        exit 1
esac

exit $?
